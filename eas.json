{
  "cli": {
    "version": ">= 7.8.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": true
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        //"buildType": "apk"
        "buildType": "app-bundle",
        // NOTE: 16KB를 지원하기 위한 ndk 설정
        "ndk": "29.0.14206865",
        "image": "latest"
      },
      "ios": {
        "autoIncrement": "buildNumber",
        "distribution": "store",
        "credentialsSource": "remote"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "ascAppId": "6754328755",
        "appleTeamId": "N53K2M6U54"
      }
    }
  }
}
